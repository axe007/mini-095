                </TableView>
            </center>
            <bottom>
                <HBox alignment="CENTER_RIGHT" fillHeight="false" prefHeight="120.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Button fx:id="userNewButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleUserButtons" prefHeight="96.0" prefWidth="96.0" styleClass="content-action-button" stylesheets="@../../css/default.css" text="New user">
                            <graphic>
                                <FontAwesomeIconView glyphName="USER_PLUS" size="30" styleClass="content-action-icon" />
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="userModifyButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleUserButtons" prefHeight="96.0" prefWidth="96.0" styleClass="content-action-button" stylesheets="@../../css/default.css" text="Modify user">
                            <graphic>
                                <FontAwesomeIconView glyphName="EDIT" size="30" styleClass="content-action-icon" />
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="userAssignButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleUserButtons" prefHeight="96.0" prefWidth="96.0" styleClass="content-action-button" stylesheets="@../../css/default.css" text="Assign team">
                            <graphic>
                                <FontAwesomeIconView glyphName="USERS" size="30" styleClass="content-action-icon" />
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="userDeleteButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleUserButtons" prefHeight="96.0" prefWidth="96.0" styleClass="content-action-button" stylesheets="@../../css/default.css" text="Delete user">
                            <graphic>
                                <FontAwesomeIconView glyphName="USER_TIMES" size="30" styleClass="content-action-icon" />
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                        <Button fx:id="userListButton" contentDisplay="TOP" mnemonicParsing="false" onAction="#handleUserButtons" prefHeight="96.0" prefWidth="96.0" styleClass="content-action-button" stylesheets="@../../css/default.css" text="List users">
                            <graphic>
                                <FontAwesomeIconView glyphName="LIST" size="30" styleClass="content-action-icon" />
                            </graphic>
                            <HBox.margin>
                                <Insets left="10.0" right="10.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                    <BorderPane.margin>
                        <Insets bottom="20.0" right="30.0" top="20.0" />
                    </BorderPane.margin>
                </HBox>
            </bottom>
        </BorderPane>
    </children>
</StackPane>
