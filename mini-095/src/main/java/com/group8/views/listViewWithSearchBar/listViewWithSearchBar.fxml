<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.DropdownButton?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="listViewWithSearchBarVBox" prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="listViewWithSearchBar">
   <children>
      <AnchorPane fx:id="searchBarAnchorPane" maxWidth="1.7976931348623157E308" prefHeight="48.0" prefWidth="200.0">
         <children>
            <HBox fx:id="searchBarHBox" maxWidth="1.7976931348623157E308" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <DropdownButton fx:id="categoriesDropDownButton">
                      <items>
                          <MenuItem text="Choice 1" />
                          <MenuItem text="Choice 2" />
                          <MenuItem text="Choice 3" />
                      </items>
                  </DropdownButton>
                  <TextField fx:id="searchTextField" promptText="Contaxt" />
                  <Button fx:id="SearchButton" mnemonicParsing="false" text="Search" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
      <AnchorPane fx:id="listViewAnchorPane" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0">
         <children>
            <ListView fx:id="listView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
         </children>
      </AnchorPane>
      <AnchorPane fx:id="bottomButtonAnchorPane" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0">
         <children>
            <HBox fx:id="bottomButtonHBox" alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="40.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <Button fx:id="deletButton" mnemonicParsing="false" text="Delete" />
                  <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" />
                  <Button fx:id="addOrSaveButton" mnemonicParsing="false" text="Add" />
               </children>
            </HBox>
         </children>
      </AnchorPane>
   </children>
</VBox>
